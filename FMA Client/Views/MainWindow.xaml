<Window x:Class="Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Views"
        mc:Ignorable="d"
        Title="Fleet Management App" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#181735">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Background="#0F0F2D" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                       Text="FMA"
                       Foreground="White"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="center"
                       FontWeight="Medium">
            </TextBlock>
            <Button Content="X"
                    Foreground="White"
                    FontWeight="Black"
                    Grid.Column="15"
                    Background="#FE6584"
                    BorderThickness="0"
                    Click="ButtonBase_OnClick"
                    
                    ></Button>
            

        </Grid>

        <StackPanel Grid.Row="1" Background="Lavender" Width="100" HorizontalAlignment="Left">
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <Image Width="50" Height="50" HorizontalAlignment="Center"
                       Source="Images/user.png" />
                <TextBlock
                    Text="Driver"
                    Foreground="Black"
                    FontSize="20"
                    FontWeight="Medium"
                    HorizontalAlignment="Center">
                </TextBlock>

                

            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
